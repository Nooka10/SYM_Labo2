<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ObjectSendFragment">

	<TextView
		android:id="@+id/objectFragmentTextView"
		android:text="@string/objectFragment_objectContentTextView"
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_marginTop="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

	<EditText
		android:id="@+id/objectFragmentComputerNameEditText"
		android:ems="10"
		android:inputType="text"
		android:text="@string/objectFragment_computerNameEditText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentTextView"/>

	<EditText
		android:id="@+id/objectFragmentComputerManufacturerEditText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="text"
		android:text="@string/objectFragment_computerManufacturerEditText"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentComputerNameEditText"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"/>

	<Button
		android:id="@+id/objectFragmentSendJsonObjectButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/objectFragment_sendJsonObjectButton"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentComputerManufacturerEditText"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"/>

	<Button
		android:id="@+id/objectFragmentSendXMLObjectButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/objectFragment_sendXmlObjectButton"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentSendJsonObjectButton"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"/>

	<Button
		android:id="@+id/objectFragmentBigJsonSendButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:text="@string/objectFragment_sendBigJsonObjectButton"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentSendXMLObjectButton"/>

	<TextView
		android:id="@+id/objectFragmentTextView2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/objectFragment_responseTitleTextView"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentBigJsonSendButton"
		android:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/objectFragmentResponseFromServerTextView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="8dp"
		android:text="@string/objectFragment_ResponseContentTextView"
		app:layout_constraintTop_toBottomOf="@+id/objectFragmentTextView2"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:scrollbars="vertical"
		android:maxLines="20"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>
